PUT {{host}}/movies_autosuggest
Content-Type: application/json

{
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "properties": {
      "title": { "type": "text" },
      "year": { "type": "integer" },
      "suggestTitle": { "type": "completion" }
    }
  }
}

