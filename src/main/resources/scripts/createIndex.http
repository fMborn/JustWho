PUT  {{host}}/movies
Content-Type: application/json

{
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text"
      },
      "overview": {
        "type": "text"
      },
      "genres": {
        "type": "text"
      },
      "releaseDate": {
        "type": "date"
      },
      "voteAverage": {
        "type": "float"
      },
      "originalTitle": {
        "type": "text"
      },
      "originalLanguage": {
        "type": "text"
      }
    }
  }
}

